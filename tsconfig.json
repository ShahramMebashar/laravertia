{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "verbatimModuleSyntax": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitThis": true,
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/*"
            ],
            "@/utils/*": [
                "resources/scripts/utils/*"
            ]
        },
        "types": [
            "vite/client",
            "momentum-layout/macro",
            "unplugin-vue-macros/macros-global"
        ]
    },
    "include": [
        "resources/**/*.ts",
        "resources/**/*.d.ts",
        "resources/**/*.vue",
        "resources/**/*.vue.ts",
    ]
}